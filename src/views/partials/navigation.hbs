      const container = document.getElementById('items-contenedor');

      count.innerText = audiencias.length;

      if (audiencias.length > 0) {
        container.innerHTML = audiencias.map(a => `
                <a class="dropdown-item" href="/audiencia/detalle/${a._id}">
                    <strong>${a.titulo || 'Audiencia'}</strong><br>
                    <small class="text-muted">${a.fechaFormateada}</small>
                </a>
            `).join('');
      } else {
        container.innerHTML = '<p class="text-center small">No hay audiencias prÃ³ximas</p>';
      }
    }
  });
</script>