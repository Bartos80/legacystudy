<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <div class="card shadow-lg border-primary">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0" style="font-weight: bold;">
                        <i class="fas fa-user-circle"></i> Información del Cliente
                    </h4>
                </div>
                <div class="card-body p-4">
                    {{! The form remains a PUT method for potential future edits, though fields are disabled }}
                    <form action="/clientes/list/{{clientes._id}}?_method=PUT" method="POST">
                        <input type="hidden" name="_method" value="PUT">

                        <div class="mb-3">
                            <label for="nyacliente" class="form-label fw-bold">Nombre y Apellido:</label>
                            <input onkeyup="ShowName();" type="text" class="form-control text-center" id="nyacliente"
                                name="nyacliente" value="{{clientes.nyacliente}}" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="dnicliente" class="form-label fw-bold">Documento (D.N.I.):</label>
                            <input type="number" class="form-control text-center" id="dnicliente" name="dnicliente"
                                value="{{clientes.dnicliente}}" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="domiciliocliente" class="form-label fw-bold">Domicilio:</label>
                            <input type="text" class="form-control text-center" id="domiciliocliente" name="domiciliocliente"
                                value="{{clientes.domiciliocliente}}" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="telefonocliente" class="form-label fw-bold">Teléfono/Celular:</label>
                            <input onkeyup="ponerminuscula()" id="telefonocliente" type="text" class="form-control text-center"
                                name="telefonocliente" value="{{clientes.telefonocliente}}" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="emailcliente" class="form-label fw-bold">Correo/Email:</label>
                            <input onkeyup="ponerminuscula()" id="emailcliente" type="text" class="form-control text-center"
                                name="emailcliente" value="{{clientes.emailcliente}}" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="localidadcliente" class="form-label fw-bold">Localidad/Ciudad:</label>
                            <input type="text" class="form-control text-center" id="localidadcliente" name="localidadcliente"
                                value="{{clientes.localidadcliente}}" disabled>
                        </div>

                        <div class="mb-3">
                            <label for="observacionescliente" class="form-label fw-bold">Observaciones:</label>
                            <input type="text" class="form-control text-center" id="observacionescliente" name="observacionescliente"
                                placeholder="Sin observaciones" value="{{clientes.observacionescliente}}" disabled>
                        </div>

                        {{! --- Action Buttons --- }}
                        <hr class="mt-4 mb-3">

                        <a class="btn btn-warning w-100 fw-bold mb-3" href="/clientes/edit/{{clientes._id}}">
                            <i class="fas fa-edit"></i> Editar Cliente
                        </a>

                        <div class="text-center">
                            <a href="javascript:window.history.back();" class="text-primary text-decoration-none fw-bold">
                                &laquo; Volver Atrás
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>