<div class="container my-4">
  <!-- Filtros de búsqueda -->
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <form action="/Audiencia/findjuzgado" method="POST">
        <input type="search" class="form-control" name="juzgado" placeholder="Buscar por Juzgado..." />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar por Juzgado</button>
      </form>
    </div>

    <div class="col-md-4">
      <form action="/audiencia/findexpediente" method="POST">
        <input type="search" class="form-control" name="numexpediente"
          placeholder="Buscar por Número de Expediente..." />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar Expediente</button>
      </form>
    </div>

    <div class="col-md-4">
      <form action="/Audiencia/findcaratula" method="POST">
        <input type="search" class="form-control" name="caratula" placeholder="Buscar por Carátula..." />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar Carátula</button>
      </form>
    </div>
  </div>

  <!-- Botones de acción -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/Audiencias/add" class="btn btn-success">+ Agregar Audiencia</a>
    <a href="/audiencia/listado" class="btn btn-outline-secondary btn-sm">↻ Recargar Listado</a>
  </div>

  <!-- Tabla de Audiencias -->
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle border rounded shadow-sm">
      <thead class="table-light text-center">
        <tr>
          <th>Juzgado</th>
          <th>Expediente</th>
          <th>Estado</th>
          <th>Caratula</th>
          <th>Fecha Audiencia</th>
          <th>Hora Audiencia</th>
          <th>Observaciones</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each audiencias}}
        <tr class="text-center">
          <td class="text-capitalize">{{ juzgado }}</td>
          <td>{{ numexpediente }}</td>
          <td>{{ estadoexpediente }}</td>
          <td>{{ caratula }}</td>
          <td>{{ dateturno }}</td>
          <td>{{ horaaudiencia }}</td>
          <td>{{ observaciones }}</td>
          <td>
            <div class="d-flex justify-content-center gap-2">
              {{!-- <a href="/audiencia/edit/{{_id}}" class="btn btn-warning btn-sm">Editar</a> --}}
              <a href="/audiencia/list/{{_id}}" class="btn btn-info btn-sm w-100">+Info</a>
              <form onSubmit="return confirm('Desea enviar Audiencia seleccionada a Papelera?')" style=""
                action="/audiencia/marcadelete/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <button class="btn btn-danger btn-sm" type="submit">
                  Borrar
                </button>
              </form>
              {{!-- <form action="/Audiencia/delete/{{_id}}?_method=DELETE" method="POST"
                onsubmit="return confirm('¿Estás seguro que deseas eliminar este turno?');">
                <input type="hidden" name="_method" value="DELETE" />
                <button class="btn btn-outline-danger btn-sm" type="submit">Borrar</button>
              </form> --}}
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>