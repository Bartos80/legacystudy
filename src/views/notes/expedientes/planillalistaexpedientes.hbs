                    <td class="fw-bold text-center">{{ numexpediente }}</td>
                    <td class="text-capitalize text-truncate" style="max-width: 180px;">{{ caratula }}</td>
                    <td class="text-capitalize text-truncate" style="max-width: 180px;">{{ partes }}</td>
                    <td class="text-capitalize text-truncate" style="max-width: 180px;">{{ estado }}</td>
                    {{!-- <td class="text-center">
