<script>
    // Tu funci贸n original de manejo de cambio, pero mejorada para la UX.
    const selectCliente = document.getElementById('selectCliente');
    const idCliente = document.getElementById('idcliente');
    const inputNyacliente = document.getElementById('nyacliente');
    const inputDnicliente = document.getElementById('dnicliente');
    const clienteInfoDiv = document.getElementById('cliente-info');
    const displayNyacliente = document.getElementById('display-nyacliente');
    const displayDnicliente = document.getElementById('display-dnicliente');


    selectCliente.addEventListener('change', function () {
        const valorCompleto = this.value;
        if (valorCompleto === "") {
            // Limpiar y ocultar
            idCliente.value = "";
            inputNyacliente.value = "";
            inputDnicliente.value = "";
            clienteInfoDiv.classList.add('d-none');
            return;
        }

        // Parsear y asignar
        const partes = valorCompleto.split('|');
        idCliente.value = partes[0] || '';
        inputNyacliente.value = partes[1] || '';
        inputDnicliente.value = partes[2] || '';

        // Mostrar informaci贸n al usuario
        displayNyacliente.textContent = partes[1] || '';
        displayDnicliente.textContent = partes[2] || '';
        clienteInfoDiv.classList.remove('d-none');
    });
</script>