<script>
  function ShowName(name) {
    const input = document.getElementById(name);
    const words = input.value.trim().split(" ");
    const formatted = words.map(w => w.charAt(0).toUpperCase() + w.slice(1).toLowerCase()).join(" ");
    input.value = formatted;
  }

  function ponerMayuscula(id) {
    const input = document.getElementById(id);
    input.value = input.value.toUpperCase();
  }

  function ponerminuscula(id) {
    const input = document.getElementById(id);
    input.value = input.value.toLowerCase();
  }

  // Make sure this runs after the page loads, e.g., inside $(document).ready() if using jQuery
  $(document).ready(function () {
    $('#idcliente').select2({
      placeholder: "Buscar Cliente...",
      allowClear: true // Optional: allows the user to clear the selection
    });
  });
</script>

<div class="container my-5">
  <div class="col-md-8 mx-auto">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        <h3 class="text-center text-primary mb-4 fw-bold">Expediente con Cliente</h3>

        <form action="/notes/newexpedientecliente" method="POST">

          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-4 border-t border-gray-200">

            <div id="resultsContainer">


              <!-- Nº Expediente -->
              <div class="mb-3">
                <label style=" color:rgb(193, 195, 197)">ID Expediente: {{expediente.idexpediente}}</label>
                <input hidden id="idexpediente" value="{{expediente.idexpediente}}" name="idexpediente"
                  class="form-control">
              </div>
              <div class="mb-3">
                <label for="numexpediente" class="form-label">N° Expediente : {{expediente.numexpediente}}</label>
                <input type="text" id="numexpediente" name="numexpediente" class="form-control"
                  value="{{expediente.numexpediente}}" hidden>
              </div>

              <!-- Caratula -->
              <div class="mb-3">
                <label for="caratula" class="form-label">Carátula : {{expediente.caratula}}</label>
                <input type="text" id="caratula" name="caratula" class="form-control" value="{{expediente.caratula}}"
                  hidden>
              </div>

              <!-- Tipo -->
              <div class="mb-3">
                <label for="partes" class="form-label">Partes: {{expediente.partes}} </label>
                <input type="text" id="partes" name="partes" class="form-control" value="{{expediente.partes}}" hidden>
              </div>

              <div>
                <label for="selectCliente">Seleccione Cliente:</label>
                <select id="selectCliente" name="selectCliente"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 bg-white">
                  <option value="">-- Elija Cliente --</option>
                  {{#each cliente}}
                  <option value="{{idcliente}}|{{nyacliente}}|{{dnicliente}}">
                    {{nyacliente}} DNI: {{dnicliente}}
                  </option>
                  {{/each}}
                </select>
              </div>

              <br>

              <div>
                <label for="idcliente">idCliente: {{idcliente}}</label>
                <input type="text" id="idcliente" name="idcliente">
              </div>
              <div>
                <label for="nyacliente">Nombre y Apellido: {{nyacliente}}</label>
                <input type="text" id="nyacliente" name="nyacliente">
              </div>
              <div>
                <label for="dnicliente">DNI:</label>
                <input type="text" id="dnicliente" name="dnicliente">
              </div>

              <p></p>
              <div class="col-md-12">
                <label class="form-label fw-semibold">Foto del Expediente</label><br />
                <p style="color:white">-</p>
                {{#if expediente.fotoexpediente}}
                <img src="{{expediente.fotoexpediente}}" class="img-thumbnail mt-2" style="max-width: 200px;"
                  alt="Foto del Expediente">
                {{else}}
                <p class="text-muted mt-2">Sin imagen disponible</p>
                {{/if}}
              </div>
              <p style="color:white">-</p>

              <!-- Botón guardar -->
              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Guardar Cliente vinculado a Expediente</button>
              </div>

              <p></p>

              <!-- Volver -->
              <div class="text-center mt-4">
                <a href="javascript:window.history.back()"
                  class="btn btn-outline-danger d-inline-flex align-items-center gap-2 px-4 py-2 shadow-sm"
                  style="font-weight: bold;">
                  <i class="fas fa-times-circle"></i>
                  Volver Atrás
                </a>
              </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  const selectCliente = document.getElementById('selectCliente');
  const idCliente = document.getElementById('idcliente');
  const inputNyacliente = document.getElementById('nyacliente');
  const inputDnicliente = document.getElementById('dnicliente');

  selectCliente.addEventListener('change', function () {
    const valorCompleto = this.value;
    if (valorCompleto === "") {
      idCliente.value = "";
      inputNyacliente.value = "";
      inputDnicliente.value = "";
      return;
    }
    const partes = valorCompleto.split('|');
    idCliente.value = partes[0] || '';
    inputNyacliente.value = partes[1] || '';
    inputDnicliente.value = partes[2] || '';
  });
</script>