                            <label class="form-label text-muted fw-semibold mb-0">N掳 Expediente:</label>
                            <p class="mb-0 text-dark fw-bold">{{expediente.numexpediente}}</p>
                            <input hidden value="{{expediente.numexpediente}}" name="numexpediente">
                        </div>

                        <div class="col-md-4">
                            <label class="form-label text-muted fw-semibold mb-0">Car谩tula:</label>
                            <p class="mb-0 text-dark text-truncate">{{expediente.caratula}}</p>
                            <input hidden value="{{expediente.caratula}}" name="caratula">
                        </div>

