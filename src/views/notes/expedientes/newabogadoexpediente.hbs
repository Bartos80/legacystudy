<script>
    // Funciones de formato (mantenerlas fuera de document.ready si no dependen de jQuery)
    function ShowName(name) {
        const input = document.getElementById(name);
        const words = input.value.trim().split(" ");
        const formatted = words.map(w => w.charAt(0).toUpperCase() + w.slice(1).toLowerCase()).join(" ");
        input.value = formatted;
    }
    function ponerMayuscula(id) {
        const input = document.getElementById(id);
        input.value = input.value.toUpperCase();
    }
    function ponerminuscula(id) {
        const input = document.getElementById(id);
        input.value = input.value.toLowerCase();
    }

    // Inicializaci贸n de Select2 (Aseg煤rate de que jQuery y Select2 est茅n cargados)
    $(document).ready(function () {
        // Se cambi贸 '#idcliente' (del c贸digo original) a '#selectAbogado' (el ID correcto del select)
        $('#selectAbogado').select2({
            placeholder: "Buscar Abogado...",
            allowClear: true,
            theme: "bootstrap" // Usa el tema de Bootstrap para mejor integraci贸n visual
        });
    });
</script>

<div class="container my-5">
    <div class="col-md-8 mx-auto">
