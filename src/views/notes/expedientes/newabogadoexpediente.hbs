<script>
  function ShowName(name) {
    const input = document.getElementById(name);
    const words = input.value.trim().split(" ");
    const formatted = words.map(w => w.charAt(0).toUpperCase() + w.slice(1).toLowerCase()).join(" ");
    input.value = formatted;
  }

  function ponerMayuscula(id) {
    const input = document.getElementById(id);
    input.value = input.value.toUpperCase();
  }

  function ponerminuscula(id) {
    const input = document.getElementById(id);
    input.value = input.value.toLowerCase();
  }

  // Make sure this runs after the page loads, e.g., inside $(document).ready() if using jQuery
  $(document).ready(function () {
    $('#idcliente').select2({
      placeholder: "Buscar Cliente...",
      allowClear: true // Optional: allows the user to clear the selection
    });
  });

</script>

<div class="container my-5">
  <div class="col-md-8 mx-auto">
    <div class="card shadow-sm border-0">
      <div class="card-body p-4">
        <h3 class="text-center text-primary mb-4 fw-bold">Expediente con Abogados</h3>

        <form action="/notes/newexpedienteabogado" method="POST">
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-4 border-t border-gray-200">

            <div id="resultsContainer">


              <!-- Nº Expediente -->
              <div class="mb-3">
                <label style=" color:rgb(193, 195, 197)">ID Expediente: {{expediente.idexpediente}}</label>
                <input hidden id="idexpediente" value="{{expediente.idexpediente}}" name="idexpediente"
                  class="form-control">
              </div>
              <div class="mb-3">
                <label for="numexpediente" class="form-label">N° Expediente : {{expediente.numexpediente}}</label>
                <input type="text" id="numexpediente" name="numexpediente" class="form-control"
                  value="{{expediente.numexpediente}}" hidden>
              </div>

              <!-- Caratula -->
              <div class="mb-3">
                <label for="caratula" class="form-label">Carátula : {{expediente.caratula}}</label>
                <input type="text" id="caratula" name="caratula" class="form-control" value="{{expediente.caratula}}"
                  hidden>
              </div>

              <!-- Tipo -->
              <div class="mb-3">
                <label for="partes" class="form-label">Partes: {{expediente.partes}} </label>
                <input type="text" id="partes" name="partes" class="form-control" value="{{expediente.partes}}" hidden>
              </div>
              
              <div>
                <label for="selectAbogado">Seleccione Abogado:</label>
                <select id="selectAbogado" name="selectAbogado"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 bg-white">
                  <option value="">-- Elija un abogado --</option>
                  {{#each abogado}}
                  <option value="{{idabogado}}|{{nyaabogado}}|{{dniabogado}}|{{matriculaabogado}}">
                    {{nyaabogado}}
                  </option>
                  {{/each}}
                </select>
              </div>

              <br>              

              <div>
                <label for="idabogado">ID abogado: {{idabogado}}</label>
                <input type="text" id="idabogado" name="idabogado" >
              </div>
              <div>
                <label for="nyaabogado">Nombre y Apellido: {{nyaabogado}}</label>
                <input type="text" id="nyaabogado" name="nyaabogado" >
              </div>
              <div>
                <label for="dniabogado">D.N.I.  {{dniabogado}}</label>
                <input type="text" id="dniabogado" name="dniabogado" >
              </div>
              <div>
                <label for="matriculaabogado">Matricula: {{matriculaabogado}}</label>
                <input type="text" id="matriculaabogado" name="matriculaabogado" >
              </div>             
              <p></p>
              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Guardar abogado vinculado a Expediente</button>
              </div>

              <p></p>
              <div class="col-md-12">
                <label class="form-label fw-semibold">Foto del Expediente</label><br />
                {{#if expediente.fotoexpediente}}
                <img src="{{expediente.fotoexpediente}}" class="img-thumbnail mt-2" style="max-width: 200px;"
                  alt="Foto del Expediente">
                {{else}}
                <p class="text-muted mt-2">Sin imagen disponible</p>
                {{/if}}
              </div>
              <p></p>

              <!-- Botón guardar -->
              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Guardar Abogado vinculado a Expediente</button>
              </div>

              <p></p>

              <!-- Volver -->
              <div class="text-center mt-4">
                <a href="javascript:window.history.back()"
                  class="btn btn-outline-danger d-inline-flex align-items-center gap-2 px-4 py-2 shadow-sm"
                  style="font-weight: bold;">
                  <i class="fas fa-times-circle"></i>
                  Volver Atrás
                </a>
              </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script> 
  const selectAbogado = document.getElementById('selectAbogado');
  const idAbogado = document.getElementById('idabogado'); 
  const nyaAbogado = document.getElementById('nyaabogado');
  const dniAbogado = document.getElementById('dniabogado');
  const matriculaAbogado = document.getElementById('matriculaabogado');

  selectAbogado.addEventListener('change', function () {
    const valorCompleto = this.value;
    if (valorCompleto === "") {
      idAbogado.value = "";
      nyaAbogado.value = "";
      dniAbogado.value = "";
      matriculaAbogado.value = "";
      return;
    } 
    const partes = valorCompleto.split('|');
    idAbogado.value = partes[0] || ''; 
    nyaAbogado.value = partes[1] || '';   
    dniAbogado.value = partes[2] || ''; 
    matriculaAbogado.value = partes[3] || ''; 
  });
</script>
