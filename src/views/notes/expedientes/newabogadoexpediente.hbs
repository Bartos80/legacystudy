                            <input hidden value="{{expediente.partes}}" name="partes">
                        </div>
                    </div>
                    
                    <hr class="my-4">

                    <h5 class="mb-3 text-success fw-semibold pb-2">锔 Selecci贸n del Abogado</h5>
                    
                    <div class="mb-4">
                        <label for="selectAbogado" class="form-label fw-bold">Buscar y Seleccionar Abogado:</label>
                        <select id="selectAbogado" name="selectAbogado" class="form-select shadow-sm" style="width: 100%;">
                            <option value="">-- Elija un abogado --</option>
                            {{#each abogado}}
                            <option value="{{idabogado}}|{{nyaabogado}}|{{dniabogado}}|{{matriculaabogado}}">
                                {{nyaabogado}} (Matr铆cula: {{matriculaabogado}})
                            </option>
                            {{/each}}
