<script>
    const selectAbogado = document.getElementById('selectAbogado');
    const idAbogado = document.getElementById('idabogado');
    const nyaAbogado = document.getElementById('nyaabogado');
    const dniAbogado = document.getElementById('dniabogado');
    const matriculaAbogado = document.getElementById('matriculaabogado');
    const abogadoInfoDiv = document.getElementById('abogado-info');
    const displayNyaAbogado = document.getElementById('display-nyaabogado');
    const displayMatriculaAbogado = document.getElementById('display-matriculaabogado');


    selectAbogado.addEventListener('change', function () {
        const valorCompleto = this.value;
        if (valorCompleto === "") {
            // Limpiar y ocultar
            idAbogado.value = "";
            nyaAbogado.value = "";
            dniAbogado.value = "";
            matriculaAbogado.value = "";
            abogadoInfoDiv.classList.add('d-none');
            return;
        }

        // Parsear y asignar
        const partes = valorCompleto.split('|');
        idAbogado.value = partes[0] || '';
        nyaAbogado.value = partes[1] || '';
        dniAbogado.value = partes[2] || '';
        matriculaAbogado.value = partes[3] || '';

        // Mostrar informaci贸n al usuario
        displayNyaAbogado.textContent = partes[1] || '';
        displayMatriculaAbogado.textContent = partes[3] || '';
        abogadoInfoDiv.classList.remove('d-none');
    });
</script>