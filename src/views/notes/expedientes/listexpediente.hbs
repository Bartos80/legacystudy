<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card shadow border-0">
        <div class="card-header bg-primary text-white text-center">
          <h4 class="mb-0 fw-semibold">Detalle del Expediente</h4>
        </div>
        <div class="card-body p-4">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label fw-semibold">Juzgado</label>
              <p class="form-control-plaintext text-muted">{{expediente.juzgado}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Secretaría</label>
              <p class="form-control-plaintext text-muted">{{expediente.secretaria}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Nº Expediente</label>
              <p class="form-control-plaintext text-muted">{{expediente.numexpediente}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Carátula</label>
              <p class="form-control-plaintext text-muted">{{expediente.caratula}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Tipo</label>
              <p class="form-control-plaintext text-muted">{{expediente.tipo}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Última Notificación</label>
              <p class="form-control-plaintext text-muted">{{expediente.ultimanotificacion}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Partes</label>
              <p class="form-control-plaintext text-muted">{{expediente.partes}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Estado</label>
              <p class="form-control-plaintext text-muted">{{expediente.estado}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Fecha de Inicio</label>
              <p class="form-control-plaintext text-muted">{{expediente.date}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Usuario</label>
              <p class="form-control-plaintext text-muted">{{expediente.name}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Fecha de Carga</label>
              <p class="form-control-plaintext text-muted">{{expediente.dateexp}}</p>
            </div>

            <div class="col-md-6">
              <label class="form-label fw-semibold">Inicio de Entrada</label>
              <p class="form-control-plaintext text-muted">{{expediente.fechainicioentrada}}</p>
            </div>

            <div class="col-md-12">
              <label class="form-label fw-semibold">Foto del Expediente</label><br />
              {{#if expediente.fotoexpediente}}
                <img src="{{expediente.fotoexpediente}}" class="img-thumbnail mt-2" style="max-width: 250px;" alt="Foto del Expediente">
              {{else}}
                <p class="text-muted mt-2">Sin imagen disponible</p>
              {{/if}}
            </div>
          </div>

          <div class="text-center mt-4">
            <a href="javascript:history.back();" class="btn btn-outline-primary">
              <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
