<div class="container my-5">

  <!-- Encabezado + botones -->
  <div
    class="d-flex justify-content-between flex-column flex-md-row align-items-start align-items-md-center gap-3 mb-4">
    <h5 class="fw-bold text-primary text-uppercase m-0">ðŸ“‹ Listado de abogados</h5>
    <div class="d-flex flex-wrap gap-2 mt-2">
      <a href="/abogados/add" class="btn btn-success btn-sm mr-4">+ Agregar Abogado</a>
      <a href="/abogados/listado" class="btn btn-outline-warning btn-sm">â†» Recargar</a>
    </div>
  </div>

  <!-- Formularios de bÃºsqueda -->
  <div class="row g-3 mb-4">
    <div class="col-sm-6 col-md-3">
      <form action="/abogados/findnombrecliente" method="POST">
        <input type="search" name="namecliente" class="form-control" placeholder="Buscar por nombre..." />
        <button title="Buscar Nombre" class="btn btn-outline-secondary w-100 mt-2 btn-sm" type="submit">Buscar</button>
      </form>
    </div>
    <div class="col-sm-6 col-md-3">
      <form action="/abogados/findapellidocliente" method="POST">
        <input type="search" name="lastnamecliente" class="form-control" placeholder="Buscar por apellido..." />
        <button title="Buscar Apellido" class="btn btn-outline-secondary w-100 mt-2 btn-sm" type="submit">Buscar</button>
      </form>
    </div>
    <div class="col-sm-6 col-md-3">
      <form action="/abogados/findlistadni" method="POST">
        <input type="search" name="dnicliente" class="form-control" placeholder="Buscar por DNI..." />
        <button title="Buscar DNI" class="btn btn-outline-secondary w-100 mt-2 btn-sm" type="submit">Buscar</button>
      </form>
    </div>
    <div class="col-sm-6 col-md-3">
      <form action="/abogados/findlistafechaentrada" method="POST">
        <input type="search" name="date" class="form-control" placeholder="Buscar por fecha alta..." />
        <button title="Buscar Fecha Alta" class="btn btn-outline-secondary w-100 mt-2 btn-sm" type="submit">Buscar</button>
      </form>
    </div>
  </div>

  <!-- Tabla responsiva de abogados -->
  {{#if abogados.length}}
  <div class="table-responsive rounded shadow-sm border">
    <table class="table table-striped table-bordered align-middle text-nowrap">
      <thead class="table-primary text-dark text-center">
        <tr>
          <td>Nombre/Apellido</td>
          <td>Matricula</td>
          <td>Tel/Cel</td>
          <td>Email/Correo</td>
          <td>Localidad</td>
          <td>Opciones</td>
          <td>Suplementario</td>
        </tr>
      </thead>
      <tbody>
        {{#each abogados}}
        <tr>
          {{!-- <td style="visibility:collapse;">{{ _id }}</td> --}}
          {{!-- <td>{{ sector }}</td> --}}
          <td style="text-transform: lowercase;">{{ nyaabogado }}</td>
          <td>{{ matriculaabogado }}</td>
          <td style="text-transform: lowercase;">{{ celularabogado }}</td>
          <td style="color:yellow;">{{ emailabogado }}</td>
          <td>{{ localidadabogado }}</td>

          <td>            
            <a class="btn btn-info btn-sm w-100" href="/Abogados/list/{{_id}}"
              >+ Info</a>
          </td>

          <td>
            <a class="btn btn-outline-warning btn-sm w-100" href="/Abogados/edit/{{_id}}" style="color:rgb(165, 196, 28)">Editar
              </a>
            <form onSubmit="return confirm('Desea enviar a Papelera?')" style=""
              action="/Abogados/marcadelete/{{_id}}?_method=PUT" method="POST">
              <input type="hidden" name="_method" value="PUT">
              <button class="btn btn-danger btn-block btn-sm" type="submit">
                Papelera
              </button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <div class="alert alert-warning text-center mt-5" role="alert">
    ðŸš« No existen Abogados registrados.
  </div>
  {{/if}}
</div>