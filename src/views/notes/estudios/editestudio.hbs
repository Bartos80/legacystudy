<script>
  function ponerminuscula() {
    let ex = document.getElementById("email");
    ex.value = ex.value.toLowerCase(); //let y =
    document.getElementById("adrema"); //y.value = y.value.toLowerCase(); }
    function ShowName() {
      var writtenName = document.getElementById('name').value;
      document.getElementById('name').value = formatToString(writtenName);
    }
    function formatToString(writtenName) {
      var tmp = writtenName.split(" "); var
        fullName; tmp.forEach(element => {
          if (fullName) {
            fullName = fullName + " " +
            element.charAt(0).toUpperCase() + element.slice(1).toLocaleLowerCase();
          } else {
            fullName = element.charAt(0).toUpperCase() +
            element.slice(1).toLocaleLowerCase();
          }
        }) return fullName;
    } function
      cargar() {
        var provincias = ["Cantabria", "Asturias", "Galicia", "Andalucia",
          "Extremadura"]; //Tu array de provincias var select =
      document.getElementById("provincias"); //Seleccionamos el select for (var i =
      0; i < provincias.length; i++) {
        var option =
          document.createElement("option"); //Creamos la opcion option.innerHTML =
        provincias[i]; //Metemos el texto en la opción select.appendChild(option);
  //Metemos la opción en el select } } cargar();
</script>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">Edicion del Estudio</h4>
        </div>
        <div class="card-body bg-light">
          <form action="/estudios/editestudio/{{estudios._id}}?_method=PUT" method="POST">
            <div class="form-group mb-3">
              <label for="numestudio">Nombre del Estudio</label>
              <input onkeyup="ShowName();" type="text" class="form-control" id="numestudio" name="numestudio"
                placeholder="Nombre del Estudio" value="{{estudios.numestudio}}" />
            </div>

            <div class="form-group mb-3">
              <label for="direstudio">Domicilio Estudio</label>
              <input type="text" class="form-control" id="direstudio" name="direstudio" placeholder="Doc. Nac. Identida"
                value="{{estudios.direstudio}}" />
            </div>

            <div class="form-group mb-3">
              <label for="telestudio">Teléfono Estudio</label>
              <input onkeyup="ShowName();" type="text" class="form-control" id="telestudio" name="telestudio"
                placeholder="Teléfono Estudio" value="{{estudios.telestudio}}" />
            </div>

            <div class="form-group mb-3">
              <label for="emailestudio">Email/Correo</label>
              <input onkeyup="ponerminuscula()" id="emailestudio" type="email" class="form-control" name="emailestudio"
                placeholder="Email/Correo" value="{{estudios.emailestudio}}" />
            </div>

            <div class="form-group mb-3">
              <label for="paisestudio">Pais</label>
              <input onkeyup="ponerminuscula()" id="paisestudio" type="text" class="form-control" name="paisestudio"
                placeholder="País" value="{{estudios.paisestudio}}" />
            </div>

            <div class="form-group mb-3">
              <label for="provinciaestudio">Provincia</label>
              <input onkeyup="ShowName();" type="text" class="form-control" id="provinciaestudio"
                name="provinciaestudio" placeholder="Provincia del Estudio" value="{{estudios.provinciaestudio}}" />
            </div>

            <div class="form-group mb-3">
              <label for="localidadestudio">Localidad</label>
              <input onkeyup="ShowName();" type="text" class="form-control" id="localidadestudio"
                name="localidadestudio" placeholder="Localidad del Estudio" value="{{estudios.localidadestudio}}" />
            </div>

            <div class="form-group mb-4">
              <label for="observacionesestudio">Observaciones</label>
              <input class="form-control" id="observacionesestudio" name="observacionesestudio" rows="3"
                placeholder="Observaciones" value="{{estudios.observacionesestudio}}" />
            </div>

            <div class="d-grid mb-3">
              <button type="submit" class="btn btn-success">Grabar</button>
            </div>

            <div class="text-center mt-4">
              <a href="/estudios/listado"
                class="btn btn-outline-danger d-inline-flex align-items-center gap-2 px-4 py-2 shadow-sm"
                style="font-weight: bold;">
                <i class="fas fa-times-circle"></i>
                Cancelar
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>