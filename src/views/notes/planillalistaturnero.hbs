<div class="container my-4">
  <!-- Filtros de búsqueda -->
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <form action="/turnos/find" method="POST">
        <input type="search" class="form-control" name="nombre" placeholder="Buscar por Nombre..." />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar</button>
      </form>
    </div>

    <div class="col-md-4">
      <form action="/turnos/findfecha" method="POST">
        <input type="date" class="form-control" name="fecha" />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar por Fecha</button>
      </form>
    </div>

    <div class="col-md-4">
      <form action="/turnos/finddni" method="POST">
        <input type="search" class="form-control" name="dni" placeholder="Buscar por DNI..." />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar</button>
      </form>
    </div>
  </div>

  <!-- Botones de acción -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <a href="/turnos/add" class="btn btn-success">+ Agregar Turno</a>
    <a href="/turnos" class="btn btn-outline-secondary btn-sm">↻ Recargar Listado</a>
  </div>

  <!-- Tabla de turnos -->
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle border rounded shadow-sm">
      <thead class="table-light text-center">
        <tr>
          <th>Nombre</th>
          <th>DNI</th>
          <th>Correo</th>
          <th>Teléfono</th>
          <th>Fecha</th>
          <th>Hora</th>
          <th>Estado</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each turnos}}
        <tr class="text-center">
          <td class="text-capitalize">{{ nombre }}</td>
          <td>{{ dni }}</td>
          <td>{{ correo }}</td>
          <td>{{ telefono }}</td>
          <td>{{ fecha }}</td>
          <td>{{ hora }}</td>
          <td><span class="badge bg-info text-dark">{{ estado }}</span></td>
          <td>
            <div class="d-flex justify-content-center gap-2">
              <a href="/turnos/edit/{{_id}}" class="btn btn-outline-warning btn-sm">Editar</a>
              <form action="/turnos/delete/{{_id}}?_method=DELETE" method="POST" onsubmit="return confirm('¿Estás seguro que deseas eliminar este turno?');">
                <input type="hidden" name="_method" value="DELETE" />
                <button class="btn btn-outline-danger btn-sm" type="submit">Borrar</button>
              </form>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
