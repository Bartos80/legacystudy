<div class="container my-4">
  <!-- Filtros de búsqueda -->
  <div class="row g-3 mb-4">
    <div class="col-md-4">
      <form action="/Audiencias/find" method="POST">
        <input type="search" class="form-control" name="nombre" placeholder="Buscar por Nombre..." />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar</button>
      </form>
    </div>

    <div class="col-md-4">
      <form action="/Audiencias/findfecha" method="POST">
        <input type="date" class="form-control" name="fecha" />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar por Fecha</button>
      </form>
    </div>

    <div class="col-md-4">
      <form action="/Audiencias/finddni" method="POST">
        <input type="search" class="form-control" name="dni" placeholder="Buscar por DNI..." />
        <button class="btn btn-outline-primary w-100 mt-2" type="submit">Buscar</button>
      </form>
    </div>
  </div>

  <!-- Botones de acción -->
  <div class="d-flex justify-content-between align-items-center mb-3">    
    <a href="/Audiencias" class="btn btn-outline-secondary btn-sm">↻ Recargar Listado</a>
  </div>

  <!-- Tabla de Audiencias -->
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle border rounded shadow-sm">
      <thead class="table-light text-center">
        <tr>
          <th>Juzgado</th>
          <th>Expediente</th>
          <th>Estado</th>
          <th>Caratula</th>
          <th>Fecha Audiencia</th>
          <th>Hora Audiencia</th> 
          <th>Borrado</th>          
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each audiencias}}
        <tr class="text-center">
          <td class="text-capitalize">{{ juzgado }}</td>
          <td>{{ numexpediente }}</td>         
          <td>{{ estadoexpediente }}</td>
          <td>{{ caratula }}</td>
          <td>{{ dateturno }}</td>
          <td>{{ horaaudiencia }}</td>
          <td style="color: green; font-weight: bold;">{{ fechaborrado }}</td>
          <td>
            <div class="d-flex justify-content-center gap-2">
              <form onSubmit="return confirm('Desea Restaurar?')" style=""
                action="/audiencia/marcadeleterestaurar/{{_id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <button class="btn btn-info btn-block btn-sm" type="submit">
                  Restaurar
                </button>
              </form>
              {{!-- <a href="/Audiencias/marcadelete/{{_id}}" class="btn btn-success btn-sm">Restaurar </a> --}}
              {{!-- <form onSubmit="return confirm('Desea enviar Audiencia seleccionada a Papelera?')"  style="box-shadow: 3px 4px;" action="/audiencia/marcadelete/{{_id}}?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <button class="btn btn-outline-danger btn-sm" type="submit">
                        Borrar
                    </button>
                </form> --}}
              <form action="/Audiencia/delete/{{_id}}?_method=DELETE" method="POST" onsubmit="return confirm('¿Seguro que desea eliminar Definitivo esta Audiencia?');">
                <input type="hidden" name="_method" value="DELETE" />
                <button class="btn btn-danger btn-sm" type="submit">Borrar</button>
              </form>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>